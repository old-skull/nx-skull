{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/elixir/src",
  "projectType": "library",
  "targets": {
    "app": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "mix new"
          }
        ],
        "cwd": "apps"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/elixir",
        "main": "libs/elixir/src/index.ts",
        "tsConfig": "libs/elixir/tsconfig.lib.json",
        "assets": [
          "libs/elixir/*.md",
          {
            "input": "./libs/elixir/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/elixir/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/elixir",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/elixir",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/elixir/**/*.ts",
          "libs/elixir/generators.json",
          "libs/elixir/executors.json",
          "libs/elixir/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/elixir"],
      "options": {
        "jestConfig": "libs/elixir/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
